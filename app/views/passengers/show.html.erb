<section id = "show_section">

  <h1>
    <%= @passenger.name%>
  </h1>

  <p>
     <%= link_to "Back", passengers_path%>
     <%= link_to "Edit", edit_passenger_path%>
     <%= link_to "Delete", passenger_path,
     data: {method: :delete, confirm: "Are you sure you want to delete #{@passenger.name} from the list?"}%>
   </p>

   <h2>List of trips that the passenger has taken</h2>

   <div class="tbl-header">
     <table cellpadding="0" cellspacing="0" border="0">
       <thead>
         <tr>
           <th>Driver</th>
           <th>Date</th>
           <th>Rating</th>
           <!-- <th>Show Trip</th> -->
         </tr>
       </thead>
     </table>
   </div>
   <div class="tbl-content">
     <table cellpadding="0" cellspacing="0" border="0">
       <% @passenger.trips.each do |trip| %>
       <tr>
         <td><%= trip.driver[:name] %></td>
         <td><%= trip[:date] %></td>
         <td><%= trip[:rating] %></td>
         <td class="table_link">
           <%= link_to "Show", passenger_trip_path(trip), class: "button_link" %>
         </td>
       </tr>
       <% end %>
     </table>
   </div>

<!-- End of show section  -->
 </section>
